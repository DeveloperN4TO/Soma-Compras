<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Bem-vindo(a)!"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txtNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do usuário"
            android:textSize="15sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnExit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            android:background="@color/full_glass"
            android:src="@drawable/ic_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txtExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Sair"
            android:layout_marginEnd="20dp"
            android:background="@color/full_glass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btnExit"
            app:layout_constraintTop_toBottomOf="@+id/btnExit"
            />

        <TextView
            android:id="@+id/txtSaldo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Digite o saldo Disponível para compra."
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            />

        <EditText
            android:id="@+id/saldo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/style_button"
            android:autofillHints="value"
            app:layout_constraintTop_toBottomOf="@+id/txtSaldo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="R$ 0,00"
            android:maxLines="1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:layout_marginHorizontal="50dp"
            android:ellipsize="end"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>